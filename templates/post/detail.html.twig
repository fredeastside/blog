{% extends 'one_column_layout.html.twig' %}

{% block content %}
    <h1>{{ post.name }}</h1>
    <p class="meta">
        {% for tag in post.tags %}
            {#<a href="/author/michelle">Michelle jones</a> in #}<a href='{{ path('post_detail', { slug: tag.slug }) }}'>{{ tag.name }}</a>&nbsp;
        {% endfor %}
        <i class="link-spacer"></i> <i class="fa fa-bookmark"></i> {{ post.created|date('d-m-Y H:i') }}
    </p>
    {{ post.content|raw }}
{% endblock %}