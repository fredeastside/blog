{% for post in posts %}
    <article class="post">
        <div class="post-preview col-xs-12  no-gutter">
            <h2><a href="{{ path('post_detail', { slug: post.slug }) }}">{{ post.name }}</a></h2>
            <p>{{ post.description }}</p>
            <p class="meta">
                {#<a href="/author/michelle">Michelle jones</a> in #}<a href='{{ path('category_detail', { slug: post.category.slug }) }}'>{{ post.category.name }}</a>
                <i class="link-spacer"></i> <i class="fa fa-bookmark"></i> {{ post.created|date('d-m-Y H:i') }}
            </p>
        </div>
    </article>
{% endfor %}